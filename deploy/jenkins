pipeline {
    agent any

    tools {
        maven 'MAVEN_HOME'
        jdk 'JAVA_HOME'
    }
    stages {
        stage('Start') {
            steps {
                  echo 'Start Daraja API Deployment '
            }
        }

        stage('Git Checkout') {
            steps {
                git credentialsId: 'Jenkins-developer-test', url: 'https://github.com/pitzdev/DarajaAPI_V2.git'

            }
        }

        stage('Compile') {
            steps {
                sh "mvn clean compile"
            }
        }

        stage('Run Test') {
            steps {
                sh "mvn test"
            }
        }

        stage('Build Application') {
            steps {
                sh "mvn package"
            }
        }

